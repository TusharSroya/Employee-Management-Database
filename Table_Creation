CREATE TABLE DEPARTMENT
(
    DID VARCHAR(3),
    DName VARCHAR(30),
    PhoneExt VARCHAR (3),
    PRIMARY KEY(DID)
);


CREATE TABLE EMPLOYEE
(
    EID VARCHAR(10),
    EName VARCHAR(10),
    Salary NUMBER(8, 2),
    MID VARCHAR(5),
    DID VARCHAR(3),
    PRIMARY KEY (EID),
    FOREIGN KEY (DID) REFERENCES DEPARTMENT,
    FOREIGN KEY (MID) REFERENCES EMPLOYEE
);

CREATE TABLE PROJECT
(
    PNum VARCHAR(6),
    PName VARCHAR(30),
    Fee NUMBER(6),
    DueDate DATE,
    PRIMARY KEY (PNum)
);

CREATE TABLE ASSIGNMENT (
    EID VARCHAR(5),
    PNum VARCHAR(6),
    Hours VARCHAR(2),
    PRIMARY KEY (EID, PNum),
    FOREIGN KEY (EID) REFERENCES EMPLOYEE,
    FOREIGN KEY (PNum) REFERENCES PROJECT
);
